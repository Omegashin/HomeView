<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_view_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.omegashin.homeview.Activity_HomeViewConfig">

    <EditText
        android:id="@+id/inputSearch"
        android:layout_width="fill_parent"
        android:textCursorDrawable="@color/white"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/primary"
        android:foreground="?selectableItemBackgroundBorderless"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/tz_search_hint"
        android:textColor="@color/white"
        android:textColorHint="@color/grey_200"
        android:inputType="textVisiblePassword"
        android:padding="16dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="@color/primary_dark"
        android:contentDescription="@string/content_widget_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey_200" />

    <ListView
        android:id="@+id/time_zone_selection_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.omegashin.homeview.HomeView"
    tools:showIn="@layout/activity_home_view">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="64dp"
        android:text="@string/help_image"
        android:layout_weight="1"
        android:src="@drawable/ic_widgets_black_24dp"
        android:tint="@color/grey_500" />

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/grey_500"
        android:padding="16dp"
        android:textSize="24sp"
        android:text="@string/help_text"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        android:text="Developer Info"
        android:onClick="OpenDevInfo"
        android:textSize="16sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content" />

</LinearLayout>

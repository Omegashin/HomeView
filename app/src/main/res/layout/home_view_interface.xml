<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TextClock
            android:id="@+id/app_calender"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:fontFamily="sans-serif-condensed"
            android:foreground="@drawable/ripple"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            tools:targetApi="jelly_bean_mr1" />

        <LinearLayout
            android:id="@+id/alarm_view"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/alarm_image_view"
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_alarm_black_24dp"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/next_alarm"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:includeFontPadding="true"
                android:text="Mon 9:20 PM"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextClock
            android:id="@+id/foreign_text_clock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:fontFamily="sans-serif-condensed"
            android:foreground="@drawable/ripple"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            tools:targetApi="jelly_bean_mr1" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:alpha="0.2"
        android:background="@color/white" />

    <include layout="@layout/apps_dock" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:alpha="0.2"
        android:background="@color/white" />

    <include layout="@layout/reminder_strip_entries" />

</LinearLayout>
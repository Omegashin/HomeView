<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chip_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omegashin.homeview.ChipConfig">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/chip_label"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/grey_200"
            android:foreground="?selectableItemBackgroundBorderless"
            android:fontFamily="sans-serif-condensed"
            android:hint="@string/chip_label_hint"
            android:maxLength="24"
            android:padding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="end"
            android:padding="8dp"
            android:text="@string/chip_label_restriction"
            android:textColor="@color/grey_500" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="16dp"
            android:textSize="18sp"
            android:text="@string/chip_icons_grid_header"
            android:textColor="@color/grey_500" />

        <GridView
            android:id="@+id/reminder_icon_grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="56dp"
            android:numColumns="auto_fit"
            android:padding="4dp"
            android:listSelector="#00000000"
            android:stretchMode="columnWidth" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_chip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_done_black_24dp"
        android:tint="@color/white" />

</RelativeLayout>
